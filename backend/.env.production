# ==================== Production Environment Configuration ====================
# DO NOT commit actual secrets to version control
# This is a template - actual values should be set in Render Dashboard

# Environment
ENVIRONMENT=production
DEBUG=False

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_PREFIX=/api/v1

# CORS - Update with your actual frontend URLs
CORS_ORIGINS=https://ai-content-generator-7ec6a.web.app,https://ai-content-generator-7ec6a.firebaseapp.com,https://your-custom-domain.com

# ==================== AI API Keys ====================
# Set these in Render Dashboard as secret environment variables
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
REPLICATE_API_KEY=your_replicate_api_key_here

# Video Generation
VIDEO_API_PROVIDER=replicate
VIDEO_API_KEY=your_replicate_api_key_here
VIDEO_MODEL=minimax/video-01

# ==================== Firebase Configuration ====================
FIREBASE_PROJECT_ID=ai-content-generator-7ec6a
FIREBASE_PRIVATE_KEY_PATH=/etc/secrets/firebase-service-account.json
FIREBASE_STORAGE_BUCKET=ai-content-generator-7ec6a.appspot.com

# ==================== Stripe Configuration ====================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID_PRO=price_your_pro_price_id
STRIPE_PRICE_ID_ENTERPRISE=price_your_enterprise_price_id

# ==================== JWT Configuration ====================
JWT_SECRET_KEY=your_generated_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ==================== Redis Configuration ====================
REDIS_HOST=your_redis_host_here
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_if_needed
REDIS_DB=0
ENABLE_CACHE=True

# ==================== Rate Limiting ====================
RATE_LIMIT_ENABLED=True
FREE_TIER_LIMIT_HOURLY=10
FREE_TIER_LIMIT_DAILY=50
HOBBY_TIER_LIMIT_HOURLY=100
HOBBY_TIER_LIMIT_DAILY=500
PRO_TIER_LIMIT_HOURLY=1000
PRO_TIER_LIMIT_DAILY=5000

# ==================== Quality Thresholds ====================
MIN_QUALITY_SCORE=0.7
AUTO_REGENERATE_THRESHOLD=0.6

# ==================== Caching Configuration ====================
ENABLE_PROMPT_CACHING=True
CACHE_TTL_SYSTEM_PROMPTS=604800
CACHE_TTL_USER_PROMPTS=86400
CACHE_TTL_GENERATIONS=3600

# ==================== Cost Tracking ====================
ENABLE_COST_TRACKING=True

# ==================== Logging ====================
LOG_LEVEL=INFO

# ==================== Error Monitoring ====================
SENTRY_DSN=your_sentry_dsn_here_optional
