# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# ============================================
# AI SERVICE API KEYS
# ============================================
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GEMINI_API_KEY=your-gemini-key-here
REPLICATE_API_KEY=r8_your-replicate-key-here

# ============================================
# MODEL CONFIGURATION (Optional - Override defaults)
# ============================================
# Text Generation Models (Defaults: gemini-2.5-flash, gemini-2.5-pro)
PRIMARY_TEXT_MODEL=gemini-2.5-flash
FALLBACK_TEXT_MODEL=gpt-4o-mini
PREMIUM_TEXT_MODEL=gemini-2.5-pro

# Image Generation Models (Defaults: flux-schnell, dall-e-3)
PRIMARY_IMAGE_MODEL=flux-schnell
PREMIUM_IMAGE_MODEL=dall-e-3

# ============================================
# FACT-CHECKING APIS
# ============================================
WOLFRAM_ALPHA_API_KEY=your-wolfram-alpha-key
GOOGLE_SCHOLAR_API_KEY=your-google-scholar-key

# ============================================
# FIREBASE CONFIGURATION
# ============================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_PATH=./firebase-service-account.json
FIREBASE_STORAGE_BUCKET=your-firebase-app.appspot.com

# ============================================
# STRIPE CONFIGURATION (Payments)
# ============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_HOBBY=price_hobby_id_from_stripe
STRIPE_PRICE_ID_PRO=price_pro_id_from_stripe

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ============================================
# REDIS CONFIGURATION (Rate Limiting & Cache)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
FREE_TIER_LIMIT_HOURLY=10
FREE_TIER_LIMIT_DAILY=50
HOBBY_TIER_LIMIT_HOURLY=100
HOBBY_TIER_LIMIT_DAILY=500
PRO_TIER_LIMIT_HOURLY=1000
PRO_TIER_LIMIT_DAILY=5000

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking
